{
    "name": "construct-blue/blue",
    "require": {
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.3",
        "laminas/laminas-diactoros": "^3.0",
        "laminas/laminas-httphandlerrunner": "^2.6",
        "league/route": "^5.1",
        "nesbot/carbon": "^2.0",
        "php": "^8.2",
        "smarty/smarty": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "Blue\\Example\\": "projects/example/src",
            "Blue\\HafasClient\\": "packages/hafas-client/src",
            "Blue\\OebbLive\\": "packages/oebb-live-client/src",
            "Blue\\Snappy\\Core\\": "packages/snappy-core/src",
            "Blue\\Snappy\\Renderer\\": "packages/snappy-renderer/src",
            "Blue\\Snappy\\Renderer\\Strategy\\Smarty\\": "packages/snappy-renderer-smarty/src",
            "Blue\\TrainsearchApi\\": "projects/trainsearch-api/src",
            "Blue\\TrainsearchFrontend\\": "projects/trainsearch/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BlueTest\\Example\\": "projects/example/tests",
            "BlueTest\\HafasClient\\": "packages/hafas-client/tests",
            "BlueTest\\OebbLive\\": "packages/oebb-live-client/tests",
            "BlueTest\\Snappy\\Core\\": "packages/snappy-core/tests",
            "BlueTest\\Snappy\\Renderer\\": "packages/snappy-renderer/tests",
            "BlueTest\\Snappy\\Renderer\\Strategy\\Smarty\\": "packages/snappy-renderer-smarty/tests",
            "BlueTest\\TrainsearchApi\\": "projects/trainsearch-api/tests",
            "BlueTest\\TrainsearchFrontend\\": "projects/trainsearch/tests"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10.21",
        "phpunit/phpunit": "^10.2",
        "symplify/monorepo-builder": "^11.2"
    },
    "scripts": {
        "phpunit": "phpunit",
        "phpstan": "phpstan analyse"
    },
    "replace": {
        "construct-blue/example": "self.version",
        "construct-blue/hafas-client": "self.version",
        "construct-blue/oebb-live-client": "self.version",
        "construct-blue/snappy-core": "self.version",
        "construct-blue/snappy-renderer": "self.version",
        "construct-blue/snappy-renderer-smarty": "self.version",
        "construct-blue/trainsearch": "self.version",
        "construct-blue/trainsearch-api": "self.version"
    }
}
